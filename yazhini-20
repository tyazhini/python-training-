a = int(input())
b = int(input())
o = input()
print(f"{['Invalid Input','Addition','Subtraction','Multiplication','Division','Modulo'][['+','-','','/','%'].index(o)+1]} of two number is {eval(f'{a}{o}{b}'):.1f}" if o in '+-/%' else "Invalid Input")
