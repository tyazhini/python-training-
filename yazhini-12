a=int(input())
b=int(input())
c=int(input())
d=a*100
e=b*20
f=c*10
l=d+e+f
print("Bill Details")
print(f"No of pizzas:{a}")
print(f"No of puffs:{b}")
print(f"No of cooldrinks:{c}")
print(f"Total price={l}")
print("ENJOY THE SHOW!!!")
