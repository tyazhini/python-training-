n=int(input())
for i in range(1,n+1):
    alpha='A'
    for j in range(1,n-i+1):
        print(" ",end='')
    for k in range(0,2*i-1):
        if(k==0 or k==2*i-2):

            print("1",end='')
        else:
            print(chr(ord(alpha)+k-1),end='')
    print()               
